# fast focus desktop
alt + cmd - 1 : yabai -m space --focus 1; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + cmd - 2 : yabai -m space --focus 2; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + cmd - 3 : yabai -m space --focus 3; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + cmd - 4 : yabai -m space --focus 4; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + cmd - 5 : yabai -m space --focus 5; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + cmd - 6 : yabai -m space --focus 6; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + cmd - 7 : yabai -m space --focus 7; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + cmd - 8 : yabai -m space --focus 8; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + cmd - 9 : yabai -m space --focus 9; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + cmd - 0 : yabai -m space --focus 10; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;

# focus window
alt - a : yabai -m window --focus west; sketchybar --trigger window_focus
alt - s : yabai -m window --focus south; sketchybar --trigger window_focus
alt - w : yabai -m window --focus north; sketchybar --trigger window_focus
alt - d : yabai -m window --focus east; sketchybar --trigger window_focus

# focus monitor
alt + cmd  - q  : yabai -m display --focus 1
alt + cmd  - w  : yabai -m display --focus 2

# send window to desktop
alt + ctrl - 1 : yabai -m window --space  1; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + ctrl - 2 : yabai -m window --space  2; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + ctrl - 3 : yabai -m window --space  3; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + ctrl - 4 : yabai -m window --space  4; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + ctrl - 5 : yabai -m window --space  5; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + ctrl - 6 : yabai -m window --space  6; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + ctrl - 7 : yabai -m window --space  7; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + ctrl - 8 : yabai -m window --space  8; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + ctrl - 9 : yabai -m window --space  9; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + ctrl - 0 : yabai -m window --space 10; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;


# send window to desktop and follow focus
alt + shift - 1 : yabai -m window --space  1; yabai -m space --focus 1; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + shift - 2 : yabai -m window --space  2; yabai -m space --focus 2; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + shift - 3 : yabai -m window --space  3; yabai -m space --focus 3; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + shift - 4 : yabai -m window --space  4; yabai -m space --focus 4; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + shift - 5 : yabai -m window --space  5; yabai -m space --focus 5; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + shift - 6 : yabai -m window --space  6; yabai -m space --focus 6; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + shift - 7 : yabai -m window --space  7; yabai -m space --focus 7; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + shift - 8 : yabai -m window --space  8; yabai -m space --focus 8; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + shift - 9 : yabai -m window --space  9; yabai -m space --focus 9; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;
alt + shift - 0 : yabai -m window --space 10; yabai -m space --focus 10; sketchybar --trigger window_focus; sketchybar --trigger windows_on_spaces;

# swap window
alt + shift - a : yabai -m window --swap west; sketchybar --trigger window_focus
alt + shift - s : yabai -m window --swap south; sketchybar --trigger window_focus
alt + shift - w : yabai -m window --swap north; sketchybar --trigger window_focus
alt + shift - d : yabai -m window --swap east; sketchybar --trigger window_focus

# rotate tree
alt - r : yabai -m space --rotate 90

# balance size of windows
alt + shift - p : yabai -m space --balance

# increase window size
alt + shift - left : yabai -m window --resize left:-20:0
alt + shift - down : yabai -m window --resize bottom:0:20
alt + shift - up : yabai -m window --resize top:0:-20
alt + shift - right : yabai -m window --resize right:20:0

# decrease window size
alt + cmd - left : yabai -m window --resize left:20:0
alt + cmd - down : yabai -m window --resize bottom:0:-20
alt + cmd - up : yabai -m window --resize top:0:20
alt + cmd - right : yabai -m window --resize right:-20:0

# float / unfloat window and center on screen
alt + shift - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2;\
          sketchybar --trigger window_focus

alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 20:20:1:1:18:18;\
          sketchybar --trigger window_focus

# mirror tree y-axis
alt - z : yabai -m space --mirror y-axis

# mirror tree x-axis
alt - x : yabai -m space --mirror x-axis

# change layout of desktop
alt + ctrl - z : yabai -m space --layout bsp
alt + ctrl - x : yabai -m space --layout float